<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".views.activities.pages.playerstats.allstats.AllStatsActivity">

    <data>

        <import type="android.view.View" />

        <variable
            name="navigator"
            type="com.naemo.afriscout.views.activities.pages.playerstats.allstats.AllStatsNavigator" />

        <variable
            name="viewModel"
            type="com.naemo.afriscout.views.activities.pages.playerstats.allstats.AllStatsViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/colorPlayerBackground">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">



                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:onClick="@{(view) -> navigator.goBack()}"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/back_button"
                        android:drawableStart="@drawable/ic_back"
                        android:text=""
                        android:textColor="@color/colorWhite"
                        android:gravity="center"
                        android:layout_margin="30dp"
                        android:textStyle="normal"
                        android:fontFamily="@font/montserrat"
                        android:textSize="12sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/player_statistics"
                        android:textColor="@color/colorWhite"
                        android:layout_marginTop="30dp"
                        android:fontFamily="@font/montserrat"
                        android:gravity="center"
                        android:textStyle="normal"
                        android:textSize="12sp" />

                </LinearLayout>


            </LinearLayout>

            <FrameLayout

                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_marginStart="30dp"
                android:background="@drawable/search_icon"
                android:backgroundTint="@color/colorPlayerImageBackground">

                <ImageView
                    android:id="@+id/player_image"
                    android:layout_marginTop="80dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginEnd="25dp"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginStart="2dp"
                    android:scaleType="centerCrop"
                    android:background="@android:color/transparent"
                    app:imageUrl="@{viewModel.image}" />

            </FrameLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat"
                android:text="@string/age"
                android:textColor="@color/colorWhite"
                android:textSize="12sp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/player_age"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorWhite"
                android:textSize="12sp"
                android:singleLine="false"
                android:scrollHorizontally="false"
                android:layout_marginStart="5dp"
                android:textStyle="normal"
                android:fontFamily="@font/montserrat"
                android:text="@{viewModel.age}" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat"
                android:text="@string/nationality"
                android:textColor="@color/colorWhite"
                android:textSize="12sp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/player_nation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorWhite"
                android:textSize="12sp"
                android:singleLine="false"
                android:scrollHorizontally="false"
                android:layout_marginStart="5dp"
                android:textStyle="normal"
                android:fontFamily="@font/montserrat"
                android:text="@{viewModel.nation}" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat"
                android:text="@string/position_"
                android:textColor="@color/colorWhite"
                android:textSize="12sp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/player_position"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorWhite"
                android:textSize="12sp"
                android:singleLine="false"
                android:scrollHorizontally="false"
                android:layout_marginStart="5dp"
                android:textStyle="normal"
                android:fontFamily="@font/montserrat"
                android:text="@{viewModel.position}" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="30dp"
            android:background="@drawable/rounded_stats"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/montserrat"
                android:textStyle="normal"
                android:textSize="15sp"
                android:text="@string/statistics"
                android:textColor="@color/colorPlayerImageBackground"
                android:layout_gravity="center_horizontal" />

            <ListView
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scrollbars="vertical"
                android:scrollbarAlwaysDrawVerticalTrack="true"
                android:smoothScrollbar="true" />


        </LinearLayout>

    </LinearLayout>

</layout>
