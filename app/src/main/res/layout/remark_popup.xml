<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/popup_remark"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_marginTop="50dp"
        app:cardElevation="10dp"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        app:cardCornerRadius="25dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:fontFamily="@font/montserrat"
                android:textColor="@color/colorPlayerBackground"
                android:gravity="bottom"
                android:textSize="15sp"
                android:id="@+id/remark"
                android:paddingStart="10dp"
                android:paddingBottom="10dp"
                android:textStyle="italic"
                android:hint="Leave a remark"
                android:textColorHint="@color/colorPlayerBackground" />

            <Button
                android:id="@+id/submit_remark_btn"
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:layout_gravity="end"
                android:background="@drawable/home_rounded_button"
                android:text="@string/submit"
                android:textColor="@android:color/white"
                android:layout_marginEnd="10dp" />


        </LinearLayout>










    </androidx.cardview.widget.CardView>

</LinearLayout>