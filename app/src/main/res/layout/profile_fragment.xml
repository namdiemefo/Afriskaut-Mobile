<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".views.fragments.profile.ProfileFragment">

    <data>
        <import type="android.view.View" />

        <variable
            name="navigator"
            type="com.naemo.afriskaut.views.fragments.profile.ProfileNavigator" />

        <variable
            name="viewModel"
            type="com.naemo.afriskaut.views.fragments.profile.ProfileViewModel" />
    </data>

    <LinearLayout
        android:id="@+id/profile_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorMainBackground"
        android:orientation="vertical">

       <androidx.appcompat.widget.Toolbar
            android:id="@+id/frag_toolbar"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            app:titleTextColor="@color/colorLoginBtn"
            app:titleTextAppearance="@font/montserrat"
            app:titleMarginStart="155dp"
            android:fitsSystemWindows="true"
            android:minHeight="?attr/actionBarSize"
            app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            android:background="@color/colorMainBackground">
        </androidx.appcompat.widget.Toolbar>

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="350dp"
                    android:orientation="vertical"
                    android:backgroundTint="@color/colorWhite"
                    android:background="@drawable/round_profile">


                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="115dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="30dp">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/myCardView"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:elevation="10dp"

                            android:backgroundTint="@color/colorLoginBtn"
                            app:cardCornerRadius="50dp">

                            <ImageView
                                app:imageUrl="@{viewModel.imageUrl}"
                                android:id="@+id/profile_image"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="centerCrop" />

                        </androidx.cardview.widget.CardView>

                        <ImageView
                            android:src="@drawable/ic_photo_camera"
                            android:id="@+id/change_pic_btn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end|center_vertical"
                            android:layout_marginTop="40dp"
                            android:elevation="20dp"
                            android:gravity="end"
                            android:paddingStart="10dp"
                            android:onClick="@{(view) -> navigator.openGallery()}"
                            android:paddingEnd="10dp"
                            android:fontFamily="@font/montserrat"
                            android:textColor="@color/colorLoginTitle"
                            android:text="@string/change_display_picture" />

                    </FrameLayout>




                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/profile_name"
                        android:layout_gravity="center"
                        android:layout_marginTop="50dp"
                        android:text="@{viewModel.fullName}"
                        android:fontFamily="@font/montserrat"
                        android:textColor="@color/colorLoginTitle"
                        android:textStyle="normal"
                        android:textSize="20sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/profile_role"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:text="@{viewModel.role}"
                        android:fontFamily="@font/montserrat"
                        android:textColor="@color/colorLoginTitle"
                        android:textStyle="normal"
                        android:textSize="16sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:elevation="5dp"
                        android:layout_margin="20dp"
                        android:onClick="@{(view) -> navigator.goToRadar()}"
                        android:orientation="horizontal"
                        android:background="@drawable/parameter_buttons"
                        android:layout_width="315dp"
                        android:layout_gravity="center"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_gravity="center_vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="20dp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@android:color/white"
                                android:text="@string/radar"
                                android:fontFamily="@font/montserrat"
                                android:textSize="@dimen/medium_text"
                                android:layout_gravity="center"/>

                        </LinearLayout>


                        <FrameLayout
                            android:layout_width="70dp"
                            android:layout_height="50dp"
                            android:layout_gravity="end"
                            android:layout_marginStart="200dp"
                            android:background="@drawable/search_icon"/>


                    </LinearLayout>

                    <LinearLayout
                        android:elevation="5dp"
                        android:onClick="@{(view) -> navigator.showReports()}"
                        android:orientation="horizontal"
                        android:background="@drawable/parameter_buttons"
                        android:layout_width="315dp"
                        android:layout_gravity="center"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_gravity="center_vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="20dp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@android:color/white"
                                android:text="@string/view_all_match_reports"
                                android:fontFamily="@font/montserrat"
                                android:textSize="@dimen/medium_text"
                                android:layout_gravity="center"/>

                        </LinearLayout>


                        <FrameLayout
                            android:layout_width="70dp"
                            android:layout_height="50dp"
                            android:layout_gravity="end"
                            android:layout_marginStart="150dp"
                            android:background="@drawable/search_icon"/>


                    </LinearLayout>


                </LinearLayout>

            </LinearLayout>

        </androidx.core.widget.NestedScrollView>










    </LinearLayout>



</layout>
