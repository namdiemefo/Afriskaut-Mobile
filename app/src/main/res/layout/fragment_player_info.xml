<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".views.fragments.player.playerinfo.PlayerInfoFragment">

    <data>

        <import type="android.view.View" />

        <variable
            name="navigator"
            type="com.naemo.afriskaut.views.fragments.player.playerinfo.PlayerInfoNavigator" />

        <variable
            name="viewModel"
            type="com.naemo.afriskaut.views.fragments.player.playerinfo.PlayerInfoViewModel" />
    </data>

    <LinearLayout

        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/colorPlayerBackground">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:onClick="@{(view) -> navigator.goBack()}"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/back_button"
                        android:drawableStart="@drawable/ic_back"
                        android:text=""
                        android:textColor="@color/colorWhite"
                        android:gravity="center"
                        android:layout_margin="30dp"
                        android:textStyle="normal"
                        android:fontFamily="@font/montserrat"
                        android:textSize="12sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/player_profile__"
                        android:textColor="@color/colorWhite"
                        android:layout_marginTop="30dp"
                        android:fontFamily="@font/montserrat"
                        android:gravity="center"
                        android:textStyle="normal"
                        android:textSize="12sp" />

                </LinearLayout>


            </LinearLayout>

            <FrameLayout

                android:layout_width="250dp"
                android:layout_height="250dp"
                android:background="@drawable/search_icon"
                android:backgroundTint="@color/colorPlayerImageBackground">

                <ImageView
                    android:id="@+id/player_image"
                    android:layout_marginTop="80dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginEnd="25dp"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_marginStart="2dp"
                    android:scaleType="centerCrop"
                    android:background="@android:color/transparent"
                    app:imageUrl="@{viewModel.image}" />

            </FrameLayout>


        </LinearLayout>

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="20dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat"
                        android:text="@string/full_name_"
                        android:textColor="@color/colorWhite"
                        android:textSize="12sp"
                        android:textStyle="normal" />

                    <TextView
                        android:id="@+id/player_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorWhite"
                        android:textSize="12sp"
                        android:singleLine="false"
                        android:scrollHorizontally="false"
                        android:layout_marginStart="5dp"
                        android:textStyle="normal"
                        android:fontFamily="@font/montserrat"
                        android:text="@{viewModel.fullName}" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="20dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat"
                        android:text="@string/weight"
                        android:textColor="@color/colorWhite"
                        android:textSize="12sp"
                        android:textStyle="normal" />

                    <TextView
                        android:id="@+id/foot"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorWhite"
                        android:textSize="12sp"
                        android:layout_marginStart="5dp"
                        android:textStyle="normal"
                        android:fontFamily="@font/montserrat"
                        android:text="@{viewModel.weight}" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="20dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat"
                        android:text="@string/height"
                        android:textColor="@color/colorWhite"
                        android:textSize="12sp"
                        android:textStyle="normal" />

                    <TextView
                        android:id="@+id/height"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorWhite"
                        android:textSize="12sp"
                        android:layout_marginStart="5dp"
                        android:textStyle="normal"
                        android:fontFamily="@font/montserrat"
                        android:text="@{viewModel.height}" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="20dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat"
                        android:text="@string/nationality"
                        android:textColor="@color/colorWhite"
                        android:textSize="12sp"
                        android:textStyle="normal" />

                    <TextView
                        android:id="@+id/country"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorWhite"
                        android:textSize="12sp"
                        android:layout_marginStart="5dp"
                        android:textStyle="normal"
                        android:fontFamily="@font/montserrat"
                        android:text="@{viewModel.nationality}" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="20dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat"
                        android:text="@string/date_of_birth"
                        android:textColor="@color/colorWhite"
                        android:textSize="12sp"
                        android:textStyle="normal" />

                    <TextView
                        android:id="@+id/player_dob"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorWhite"
                        android:textSize="12sp"
                        android:layout_marginStart="5dp"
                        android:textStyle="normal"
                        android:fontFamily="@font/montserrat"
                        android:text="@{viewModel.dob}" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="20dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat"
                        android:text="@string/place_of_birth"
                        android:textColor="@color/colorWhite"
                        android:textSize="12sp"
                        android:textStyle="normal" />

                    <TextView
                        android:id="@+id/pob"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorWhite"
                        android:textSize="12sp"
                        android:layout_marginStart="5dp"
                        android:textStyle="normal"
                        android:fontFamily="@font/montserrat"
                        android:text="@{viewModel.pob}" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="20dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat"
                        android:text="@string/position_"
                        android:textColor="@color/colorWhite"
                        android:textSize="12sp"
                        android:textStyle="normal" />

                    <TextView
                        android:id="@+id/position"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorWhite"
                        android:textSize="12sp"
                        android:layout_marginStart="5dp"
                        android:textStyle="normal"
                        android:fontFamily="@font/montserrat"
                        android:text="@{viewModel.position}" />
                </LinearLayout>

                <Button
                    android:id="@+id/follow_button"
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:text="@{viewModel.followBtn}"
                    android:onClick="@{(view) -> navigator.followPlayer()}"
                    android:background="@drawable/home_round_button"
                    android:textColor="@color/colorWhite"
                    android:layout_marginTop="30dp"
                    android:layout_marginStart="200dp" />

                <Button
                    android:onClick="@{(view) -> navigator.moveToPickStats()}"
                    android:id="@+id/player_stats_btn"
                    android:layout_width="315dp"
                    android:layout_height="54dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="60dp"
                    android:layout_marginBottom="30dp"
                    android:fontFamily="@font/montserrat"
                    android:textStyle="normal"
                    android:text="@string/player_statistics"
                    android:background="@drawable/stats_button" />


            </LinearLayout>

        </androidx.core.widget.NestedScrollView>




    </LinearLayout>

</layout>





