<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".views.activities.account.login.LoginActivity">

    <data>
        <import type="android.view.View" />

        <variable
            name="navigator"
            type="com.naemo.afriskaut.views.activities.account.login.LoginNavigator" />

        <variable
            name="viewModel"
            type="com.naemo.afriskaut.views.activities.account.login.LoginViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/frame">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat"
            android:text="@string/log_in"
            android:textColor="@color/colorLoginTitle"
            android:textSize="18sp"
            android:textStyle="normal"
            android:layout_gravity="center"
            android:layout_marginTop="10dp" />

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="40dp">

                <EditText
                    android:id="@+id/email"
                    android:layout_width="337dp"
                    android:layout_height="60dp"
                    android:ems="10"
                    android:inputType="textEmailAddress"
                    android:hint="@string/e_mail"
                    android:textSize="13sp"
                    android:imeOptions="actionNext"
                    android:textStyle="italic"
                    android:textColorHint="@color/colorHint"
                    android:textColor="@color/colorHomeText"
                    android:fontFamily="@font/montserrat"
                    android:background="@drawable/rounded_field"
                    android:paddingStart="15dp"
                    android:layout_gravity="center"
                    android:text="@={viewModel.email}" />

                <EditText
                    android:id="@+id/password"
                    android:layout_width="337dp"
                    android:layout_height="60dp"
                    android:ems="10"
                    android:inputType="textPassword"
                    android:hint="@string/password"
                    android:imeOptions="actionDone"
                    android:textStyle="italic"
                    android:textSize="13sp"
                    android:textColorHint="@color/colorHint"
                    android:textColor="@color/colorHomeText"
                    android:background="@drawable/rounded_field"
                    android:paddingStart="15dp"
                    android:layout_marginTop="15dp"
                    android:text="@={viewModel.password}"
                    android:layout_gravity="center"/>

                <Button
                    android:id="@+id/login_button"
                    android:layout_width="315dp"
                    android:layout_height="54dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="30dp"
                    android:background="@drawable/login_round_button"
                    android:onClick="@{(view) -> navigator.sendLogin()}"
                    android:text="@string/submit"
                    android:textSize="13sp"
                    android:textColor="@color/colorWhite" />

                <TextView
                    android:id="@+id/forgot_password"
                    android:layout_width="163dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_marginTop="70dp"
                    android:fontFamily="@font/montserrat"
                    android:onClick="@{(view) -> navigator.goToForgot()}"
                    android:text="@string/forgot_password"
                    android:textColor="@color/colorLoginBtn"
                    android:textSize="12sp" />

                <ImageView
                    android:layout_width="235dp"
                    android:layout_height="58dp"
                    android:layout_marginTop="180dp"
                    android:layout_gravity="bottom|center"
                    android:src="@drawable/splash_logo" />



            </LinearLayout>


        </androidx.core.widget.NestedScrollView>



    </LinearLayout>

</layout>
